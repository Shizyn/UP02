<Page x:Class="UP02.Pages.Authoriz.Glav" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP02.Pages.Authoriz" 
      mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="820" Title="Glav">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Image/tebletki.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="105*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" MinHeight="45" />
            <RowDefinition Height="82*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Добро пожаловать!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Foreground="#9EA1A2" Margin="284,60,275,118" Width="253" Height="32" />
        <Button Content="Войти" Width="284" Height="100" FontSize="16" Background="#0060AC" Foreground="White" Cursor="Hand" Click="NavigateToLoginPage" HorizontalAlignment="Center" Margin="152,73,846,149" Grid.Row="3" />
        <Button Content="Зарегистрироваться" Width="296" Height="100" FontSize="16" Background="#E41613" Foreground="White" Cursor="Hand" Click="NavigateToRegisterPage" HorizontalAlignment="Center" Margin="896,73,118,149" Grid.Row="3" />
        <Frame x:Name="frame" NavigationUIVisibility="Hidden" Margin="10,25,0,100" Grid.RowSpan="4" />
    </Grid>
</Page>
