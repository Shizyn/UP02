<Page x:Class="UP02.Pages.Regist.Regist" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:UP02.Pages.Regist" mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" Title="Regist" MinHeight="800" MinWidth="1310" MaxHeight="1000" MaxWidth="1310" Background="#F5F5F5">
    <Grid Margin="20" Background="#9EA1A2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20" />

        <!-- Логин -->
        <TextBlock Text="Логин:" FontSize="16" Grid.Row="1" Margin="0,0,0,5" />
        <TextBox Name="LoginTB" Width="300" Height="30" Grid.Row="1" Margin="230,0,230,0" VerticalAlignment="Center" />

        <!-- Пароль -->
        <TextBlock Text="Пароль:" FontSize="16" Grid.Row="2" Margin="0,10,0,5" />
        <PasswordBox Name="PassPB" Width="300" Height="30" Grid.Row="2" Margin="230,0,230,0" VerticalAlignment="Center" />

        <!-- Подтверждение пароля -->
        <TextBlock Text="Подтвердите пароль:" FontSize="16" Grid.Row="3" Margin="0,10,0,5" />
        <PasswordBox Name="ConfirmPassPB" Width="300" Height="30" Grid.Row="3" Margin="230,0,230,0" VerticalAlignment="Center" />

        <!-- Email -->
        <TextBlock Text="Email:" FontSize="16" Grid.Row="4" Margin="0,10,0,5" />
        <TextBox Name="EmailTB" Width="300" Height="30" Grid.Row="4" Margin="230,0,230,0" VerticalAlignment="Center" />

        <!-- ФИО -->
        <TextBlock Text="ФИО:" FontSize="16" Grid.Row="5" Margin="0,10,0,5" />
        <TextBox Name="FioTB" Width="300" Height="30" Grid.Row="5" Margin="230,0,230,0" VerticalAlignment="Center" />

        <!-- Телефон -->
        <TextBlock Text="Телефон:" FontSize="16" Grid.Row="6" Margin="0,10,0,5" />
        <TextBox Name="PhoneTB" Width="300" Height="30" Grid.Row="6" Margin="230,0,230,0" VerticalAlignment="Center" />

        <!-- Адрес -->
        <TextBlock Text="Адрес:" FontSize="16" Grid.Row="7" Margin="0,10,0,5" />
        <TextBox Name="AddressTB" Width="300" Height="30" Grid.Row="7" Margin="230,0,230,0" VerticalAlignment="Center" />

        <!-- Кнопка регистрации -->
        <Button Content="Зарегистрироваться" Width="150" Height="40" Grid.Row="8" Margin="280,20,280,0" Click="RegisterBtn_Click" />
        <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>

    </Grid>
</Page>
