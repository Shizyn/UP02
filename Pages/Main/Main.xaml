<Page x:Class="UP02.Pages.Main.Main" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:UP02.Pages.Main" mc:Ignorable="d" d:DesignHeight="700" Title="Main" MinWidth="1315">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Image/tebletki.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0*" />
        </Grid.ColumnDefinitions>
        <Menu Background="#9EA1A2" Height="50" VerticalAlignment="Top" x:Name="mainMenu" FontSize="15" FontFamily="Verdana">
            <MenuItem Header="Пользователи" Height="50" BorderBrush="#E41613" BorderThickness="1,2">
                <MenuItem Header="Cпиcoк" Click="OpenUsersList"></MenuItem>
                <MenuItem Header="Добавить" Click="OpenUsersAdd"></MenuItem>
                <!--<MenuItem Header="Экспортировать" Click="ExportRecord"></MenuItem>-->
            </MenuItem>
            <MenuItem Header="Оборудование" BorderBrush="#E41613" BorderThickness="1,2">
                <MenuItem Header="Cпиcoк" Click="OpenEquipmentList"></MenuItem>
                <MenuItem Header="Добавить" Click="OpenEquipmentAdd"></MenuItem>
            </MenuItem>
            <MenuItem Header="Аудитории" BorderBrush="#E41613" BorderThickness="1,2">
                <MenuItem Header="Спucoк" Click="OpenRoomList"></MenuItem>
                <MenuItem Header="Добавить" Click="OpenRoomAdd"></MenuItem>
            </MenuItem>
            <MenuItem Header="Инвентаризация" BorderBrush="#E41613" BorderThickness="1,2">
                <MenuItem Header="Cпиcoк" Click="OpenInventoryList" />
                <MenuItem Header="Добавить" Click="OpenInventoryAdd" />
            </MenuItem>
            <MenuItem Header="Сетевые настройки" BorderBrush="#E41613" BorderThickness="1,2">
                <MenuItem Header="Cпиcoк" Click="OpenNetworkSettingsList" />
                <MenuItem Header="Добавить" Click="OpenNetworkSettingsAdd" />
            </MenuItem>
            <MenuItem Header="Материалы" BorderBrush="#E41613" BorderThickness="1,2">
                <MenuItem Header="Cпиcoк" Click="OpenConsumablesList" />
                <MenuItem Header="Добавить" Click="OpenConsumablesAdd" />
            </MenuItem>
            <MenuItem Header="Характеристики расходного материала" BorderBrush="#E41613" BorderThickness="1,2">
                <MenuItem Header="Cпиcoк" Click="OpenTypeConsumablesList" />
                <MenuItem Header="Добавить" Click="OpenTypeConsumablesAdd" />
            </MenuItem>
            <MenuItem Header="ПО" BorderBrush="#E41613" BorderThickness="2">
                <MenuItem Header="Cпиcoк" Click="OpenSoftwareList" />
                <MenuItem Header="Добавить" Click="OpenSoftwareAdd" />
            </MenuItem>
            <MenuItem Header="Модель оборудования" BorderBrush="#E41613" BorderThickness="1,2">
                <MenuItem Header="Cпиcoк" Click="OpenModelsList" />
                <MenuItem Header="Добавить" Click="OpenModelsAdd" />
            </MenuItem>
        </Menu>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden" Margin="0,50,0,0" />
    </Grid>
</Page>
