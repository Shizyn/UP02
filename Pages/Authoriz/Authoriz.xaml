<Page x:Class="UP02.Pages.Authoriz.Authoriz" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP02.Pages.Authoriz" 
      mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="800" Title="Authoriz" >
    <Grid Background="White" Margin="5">
        <Grid Margin="5" Background="#9EA1A2">
            <TextBlock Text="Авторизация" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0,20,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#E41613" Opacity="1" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>


            <TextBlock Foreground="White" Text="Логин:" FontSize="16" VerticalAlignment="Center" Margin="0,90,460,165" HorizontalAlignment="Center" >
                <TextBlock.Effect>
                    <DropShadowEffect Color="#E41613" Opacity="1" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBox BorderBrush="Gray" BorderThickness="2" Name="LoginTextBox" Width="400" Height="30" Margin="0,90,0,165" VerticalAlignment="Center" />

            <!-- Пароль -->
            <TextBlock  Foreground="White" Text="Пароль:" FontSize="16" VerticalAlignment="Center" Margin="0,130,470,125"  HorizontalAlignment="Center" >
                <TextBlock.Effect>
                    <DropShadowEffect Color="#E41613" Opacity="1" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <PasswordBox BorderBrush="Gray" BorderThickness="2" Name="PasswordBox" Width="400" Height="30" Margin="0,130,0,125" VerticalAlignment="Center" />

            <!-- Кнопка входа -->
            <Button  BorderBrush="Gray" BorderThickness="2" Background="#0060AC" Foreground="White" Content="Войти" Width="150" Height="40" FontSize="14" Margin="315,0,315,20" Click="LoginButton_Click" VerticalAlignment="Bottom" />
            <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
        </Grid>
        <Button Content="Назад" Width="100" Height="30" FontSize="14" Background="#0060AC" Foreground="White" Click="GetBackButton_Click" HorizontalAlignment="Right" Margin="0,27,29,0" VerticalAlignment="Top" />
    </Grid>
</Page>
