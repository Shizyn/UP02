<Page x:Class="UP02.Pages.ConsumableCharacteristics.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP02.Pages.ConsumableCharacteristics"
      mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="1000"
      Title="Add">

    <Grid Background="White" Margin="10">
        <Grid  Background="#9EA1A2">
            <TextBlock Text="Добавление характеристики материала" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0,20,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#E41613" Opacity="1" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <Button Content="Назад" Width="100" Height="30" FontSize="14" Background="#0060AC" Foreground="White" Click="GetBackButton_Click" HorizontalAlignment="Right" Margin="0,27,29,0" VerticalAlignment="Top" />

            <!-- Название -->
            <TextBlock Foreground="White" Text="Материал:" FontSize="16" VerticalAlignment="Center" Margin="0,110,490,165" HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#E41613" Opacity="1" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBox BorderBrush="Gray" BorderThickness="2" Name="consumablePB" Width="400" Height="30" Margin="0,160,0,215" VerticalAlignment="Center" />

            <!-- ID поставщика -->
            <TextBlock Foreground="White" Text="Название:" FontSize="16" VerticalAlignment="Center" Margin="0,190,490,165" HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#E41613" Opacity="1" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBox BorderBrush="Gray" BorderThickness="2" Name="characteristic_nameTB" Width="400" Height="30" Margin="0,190,0,165" VerticalAlignment="Center" />

            <!-- Версия -->
            <TextBlock Foreground="White" Text="Значение характеристики:" VerticalAlignment="Center" FontSize="16" Margin="0,220,610,115" HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#E41613" Opacity="1" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBox BorderBrush="Gray" BorderThickness="2" Name="characteristic_valueTB" Width="400" Height="30" Margin="0,220,0,115" VerticalAlignment="Center" />

            <!-- Кнопка регистрации -->
            <Button BorderBrush="Gray" BorderThickness="2" Background="#0060AC" Foreground="White" Content="Добавить" Width="150" Height="40" FontSize="14" Margin="315,0,315,20" Click="AddConsumable_characteristicsBtn_Click" VerticalAlignment="Bottom" />
            <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Page>
